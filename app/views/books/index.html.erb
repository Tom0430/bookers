<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>body</th>
	</tr>
    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show",book_path(book) %></td>
    <td><%= link_to "edit",edit_book_path(book) %></td>
    <td><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
    </tr>
    <% end %>

</table>




<h2>New book</h2>

<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
       <h2><%= @book.errors.count %> 件のエラーが発生しました</h2>
       <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>