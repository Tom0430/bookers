<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
       <h2><%= @book.errors.count %> 件のエラーが発生しました</h2>
       <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

	<h4>Title</h4>

	<%= f.text_field :title %>

	<h4>Body</h4>

	<%= f.text_area :body %>

	<%= f.submit 'Update book' %>
<% end %>

<p><%= link_to "show",book_path(@book) %></p>
<p><%= link_to "back",books_path %></p>